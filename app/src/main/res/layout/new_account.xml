<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jcog.jcoglab3.NewAccount">


    <Button
        android:id="@+id/clearbutton"
        android:layout_width="84dp"
        android:layout_height="35dp"
        android:layout_gravity="right"
        android:onClick="clearButtonClicked"
        android:text="Clear" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:layout_marginTop="40dp"
        android:textSize="18dp"
        android:text="Create a new account"
        android:layout_gravity="center"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">


        <ImageButton
            android:id="@+id/imageProfile"
            android:layout_width="103dp"
            android:layout_height="102dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"
            android:onClick="camButtonClicked" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center">
        <TextView
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="User Name"
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/editHandle" />

        <EditText
            android:id="@+id/editusername"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:ems="10"
            android:hint="username here"
            android:inputType="textPersonName" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginTop="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="UG"
            android:layout_marginRight="10dp"/>

        <Switch
            android:id="@+id/gradtoggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="GR"
            android:layout_marginLeft="10dp"/>






    </LinearLayout>


    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="20dp"
        android:text="Password"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/editPassword" />

    <EditText
        android:id="@+id/editpassword"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:ems="10"
        android:ellipsize="start"
        android:gravity="center_horizontal"
        android:hint="*******"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp" />

    <Button
        android:id="@+id/donebutton"
        android:layout_width="84dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Done" />

    <Button
        android:id="@+id/existingaccountbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:text="I already have an account" />

</LinearLayout>